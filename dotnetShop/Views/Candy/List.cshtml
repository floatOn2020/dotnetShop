@model CandyListViewModel

<h1>@Model.CurrentCategory</h1>
<div class="d-flex flex-wrap candy-container">
    @foreach (var candy in Model.Candies)
    {
        <div class="col-xs-12 col-sm-4">
            <div class="thumbnail">
                <img src="@candy.ImageThumbnailUrl" alt="image of candy" />
                <div class="caption">
                    <h3 class="pull-right">@candy.Price.ToString("c")</h3>
                    <h3>@candy.Name </h3>
                    <h4>@candy.Description</h4>
                </div>
            </div>
        </div>
    }

</div>
